<?xml version="1.0"?>
<!-- initial phpunit configuration file, that you can modify for your project needs -->
<phpunit cacheTokens="true"
         colors="false"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         stopOnError="false"
         stopOnFailure="false"
         stopOnIncomplete="false"
         stopOnSkipped="false"
         verbose="false"
         bootstrap="bootstrap.php">
    <listeners>
        <listener file="../../magento/app/code/community/EcomDev/PHPUnit/Test/Listener.php" class="EcomDev_PHPUnit_Test_Listener" />
    </listeners>
    <testsuites>
        <testsuite name="Magento Test Suite">
            <file>/var/data/jenkins/jobs/DHL-Versenden/workspace/magento/app/code/community/EcomDev/PHPUnit/Test/Suite.php</file>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">/var/data/jenkins/jobs/DHL-Versenden/workspace/magento/app/code/community/Dhl/Versenden</directory>
            <exclude>
                <directory suffix=".php">/var/data/jenkins/jobs/DHL-Versenden/workspace/magento/app/code/community/Dhl/Versenden/Test</directory>
                <directory>/var/data/jenkins/jobs/DHL-Versenden/workspace/magento/app/code/community/Dhl/*/data</directory>
                <directory>/var/data/jenkins/jobs/DHL-Versenden/workspace/magento/app/code/community/Dhl/*/sql</directory>
            </exclude>
        </whitelist>
    </filter>
    <logging>
        <!-- Uncomment this line if you want to have coverage report generated every test run
        <log type="coverage-html" target="var/phpunit/coverage" charset="UTF-8"
              yui="true" highlight="false"
              lowUpperBound="35" highLowerBound="70"/>
        <log type="coverage-clover" target="var/phpunit/coverage.xml"/>
        -->
        <log type="junit" target="var/phpunit/junit.xml" logIncompleteSkipped="false"/>
    </logging>
</phpunit>
